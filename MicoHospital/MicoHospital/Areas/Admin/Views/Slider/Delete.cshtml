@using MicoHospital.Core.Models
@model Slider

<div class="container">
    <div class="row">
        <div class="col-12">
           <form asp-action="DeletePost" method="post"> 
                <div class="card" style="width: 18rem;">
                    <img src="~/uploads/sliders/@Model.ImageUrl" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h4 class="card-title">@Model.Title</h4>
                        <p class="card-text">@Model.Description</p>
                        <h5 class="card-title">@Model.RedirectUrl</h5>  
                        <input asp-for="@Model.Id" hidden value="@Model.Id" />
                        <a asp-action="Index" class="btn btn-outline-info">Go Back</a>
                        <button type="submit" class="btn btn-primary">Delete</button>
                    </div>
                </div>
           </form>
        </div>
    </div>
</div>

